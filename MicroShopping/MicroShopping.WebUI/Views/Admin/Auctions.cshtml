@model IEnumerable<MicroShopping.WebUI.Models.AuctionModel>

@{
    ViewBag.Title = "Auctions | MicroShopping";
}

@Html.Partial("_AdminNavigation")

<div class="admin-content">
    <h3>Listado de Remates:</h3>

    <a href="@Url.Action("Create","Auction")" class="btn btn-info">Crear Remate</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Producto</th>
                <th>Costo de Lance</th>
                <th>Tiempo de Inicio</th>
                <th></th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                <tr>
                    <td>@auction.AuctionId</td>
                    <td>@auction.ProductName</td>
                    <td>@auction.LanceCost</td>
                    <td>@auction.StartTime</td>
                    <td>
                        @if (auction.IsFinished)
                        {
                            <span class="label label-warning">Terminado</span>
                        }
                        else
                        {
                            <span class="label label-success">Por Abrirse</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-small btn-success" href="@Url.Action("Edit", "Auction", new { id = auction.AuctionId })">Editar</a>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
