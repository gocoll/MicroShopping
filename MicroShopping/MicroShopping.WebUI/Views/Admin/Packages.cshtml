@model IEnumerable<MicroShopping.WebUI.Models.LancePackageModel>

@{
    ViewBag.Title = "Paquetes de Lances | MicroShopping";
}

@Html.Partial("_AdminNavigation")

<div class="admin-content">
    <h3>Listado de Paquetes de Lances:</h3>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Cantidad Lances</th>
                <th>Costo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model)
            {
                <tr>
                    <td>@package.LancePackageId</td>
                    <td>@package.Name</td>
                    <td>@package.CreditAmount</td>
                    <td>$@package.Costo</td>
                    <td>
                        <a class="btn btn-small btn-success" href="@Url.Action("Edit", "Package", new { id = package.LancePackageId })">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
